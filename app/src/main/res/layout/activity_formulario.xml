<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufrpe.artemis.pessoa.gui.FormularioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imagemPrestadoraId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
            <TextView
                android:id="@+id/nomePrestadoraId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
            <TextView
                android:id="@+id/servicoPrestadoId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PreÃ§o"/>
            <RatingBar
                android:id="@+id/precoRatingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                tools:layout_editor_absoluteX="102dp"
                tools:layout_editor_absoluteY="253dp"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
        </LinearLayout>

        <RatingBar
            android:id="@+id/qualidadeRatingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="253dp"
            android:scaleX="0.8"
            android:scaleY="0.8"/>
        <RatingBar
            android:id="@+id/atendimentoRatingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="253dp"
            android:scaleX="0.8"
            android:scaleY="0.8"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>